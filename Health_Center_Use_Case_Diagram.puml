@startuml Health_Center_Use_Case_Diagram
!theme plain
title Health Center Management System - Use Case Diagram

' Actors
:Admin/Manager: as Admin
:Receptionist/Front Desk: as Receptionist
:Vaccine Staff: as VaccineStaff
:Common Disease Staff: as DiseaseStaff
:Gynecology Staff: as GynecoStaff
:Medicine/Pharmacy Staff: as PharmacyStaff

' System boundary
rectangle "Health Center Management System" {

    ' Authentication Use Cases
    package "Authentication" {
        (Login) as Login
        (Logout) as Logout
        (Manage Profile) as Profile
    }

    ' Admin Use Cases
    package "System Administration" {
        (View Dashboard) as Dashboard
        (Create User Account) as CreateUser
        (Manage Users) as ManageUsers
        (Generate System Reports) as SystemReports
        (Export Data) as ExportData
        (System Configuration) as SysConfig
        (Language Management) as LangMgmt
    }

    ' Patient Management Use Cases
    package "Patient Management" {
        (Register New Patient) as RegisterPatient
        (Search Patients) as SearchPatients
        (Edit Patient Info) as EditPatient
        (Assign Patient to Department) as AssignPatient
        (Add Patient Services) as AddServices
        (View Patient History) as ViewHistory
    }

    ' Vaccine Services Use Cases
    package "Vaccine Services" {
        (Access Vaccine Workspace) as VaccineWorkspace
        (Manage Vaccine Categories) as VaccineCategories
        (Process Vaccinations) as ProcessVaccination
        (Record Vaccination Data) as RecordVaccination
        (Schedule Comeback Visits) as ScheduleComeback
        (Track Vaccination History) as TrackVaccination
    }

    ' Common Disease Services Use Cases
    package "Common Disease Services" {
        (Access Disease Workspace) as DiseaseWorkspace
        (Diagnose Patient) as DiagnosePatient
        (Record Medical Info) as RecordMedical
        (Generate Medical Reports) as MedicalReports
        (Search Patient Symptoms) as SearchSymptoms
        (Export Diagnostic Data) as ExportDiagnostic
        (Print Medical Certificate) as PrintCertificate
    }

    ' Gynecology Services Use Cases
    package "Gynecology Services" {
        (Access Gynecology Workspace) as GynecoWorkspace
        (Conduct Examinations) as ConductExam
        (Record Examination Results) as RecordExam
        (Manage Reproductive Health) as ManageReproductive
        (Generate Gynecology Reports) as GynecoReports
    }

    ' Pharmacy Services Use Cases
    package "Pharmacy Services" {
        (Access Pharmacy Workspace) as PharmacyWorkspace
        (Manage Medicine Inventory) as ManageInventory
        (Dispense Medications) as DispenseMedicine
        (Update Stock Levels) as UpdateStock
        (Bulk Medication Dispensing) as BulkDispense
        (View Pharmacy Dashboard) as PharmacyDashboard
        (Track Medicine Usage) as TrackMedicine
    }

    ' Assignment Management Use Cases
    package "Assignment Management" {
        (View Assigned Patients) as ViewAssignments
        (Mark Assignment Read) as MarkRead
        (Mark Assignment Processed) as MarkProcessed
        (Update Patient Assignment Status) as UpdateAssignmentStatus
    }
}

